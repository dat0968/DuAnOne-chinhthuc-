@model CheckoutViewModel


@{
    Layout = null;
}
@{
    ViewData["Title"] = "Thông Tin Nhận Hàng";
}

<style>
    body {
        background-color: #ecf0f1;
        font-family: 'Open Sans', sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        padding: 20px;
    }

    .container {
        background-color: #ffffff;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
    }

    h2 {
        font-size: 32px;
        font-weight: bold;
        color: #2c3e50;
        text-align: center;
        margin-bottom: 30px;
        position: relative;
        font-family: 'Playfair Display', serif;
        letter-spacing: 1px;
    }

        h2::after {
            content: '';
            display: block;
            width: 100px;
            height: 4px;
            background-color: #e74c3c;
            margin: 10px auto 0;
            border-radius: 2px;
            transition: width 0.4s ease;
        }

        h2:hover::after {
            width: 160px;
        }

    .form-group {
        margin-bottom: 25px;
        position: relative;
    }

        .form-group label {
            font-weight: 600;
            color: #34495e;
            margin-bottom: 10px;
            display: block;
            font-size: 16px;
        }

    .form-control {
        width: 100%;
        padding: 12px 18px;
        font-size: 16px;
        border: 1px solid #bdc3c7;
        border-radius: 50px;
        transition: all 0.4s ease;
        background-color: #f8f9fa;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        font-family: 'Lato', sans-serif;
    }

        .form-control:focus {
            border-color: #e74c3c;
            box-shadow: 0 0 12px rgba(231, 76, 60, 0.3);
            outline: none;
            background-color: #ffffff;
        }

    .text-danger {
        color: #e74c3c;
        font-size: 14px;
        margin-top: 5px;
        display: block;
        font-family: 'Roboto', sans-serif;
    }

    .btn-primary {
        background-color: #e74c3c;
        border-color: #c0392b;
        color: #fff;
        padding: 12px 25px;
        font-size: 18px;
        font-weight: 700;
        border-radius: 50px;
        transition: all 0.4s ease;
        font-family: 'Montserrat', sans-serif;
        box-shadow: 0 8px 15px rgba(231, 76, 60, 0.3);
        width: 100%;
        text-align: center;
    }

        .btn-primary:hover {
            background-color: #c0392b;
            transform: translateY(-3px);
            box-shadow: 0 12px 20px rgba(231, 76, 60, 0.4);
        }

        .btn-primary:active {
            background-color: #a93226;
            transform: translateY(0);
            box-shadow: 0 6px 10px rgba(231, 76, 60, 0.2);
        }

    .form-group label::after {
        content: '*';
        color: #e74c3c;
        margin-left: 5px;
        font-weight: bold;
        font-size: 14px;
    }

</style>


<form asp-action="Checkout" method="post">
    <h2>Thông Tin Nhận Hàng</h2>
    <div class="form-group">
        <label asp-for="DiaChiNhanHang">Địa chỉ nhận hàng</label>
        <input asp-for="DiaChiNhanHang" class="form-control" />
        <span asp-validation-for="DiaChiNhanHang" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HTTT">Hình Thức Thanh Toán</label>
        <select asp-for="HTTT" class="form-control">
            <option value="Bank">Chuyển khoản (VnPay)</option>
            <option value="COD">Thanh toán khi nhận hàng (COD)</option>
        </select>
        <span asp-validation-for="HTTT" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="MaKH" />
    <input type="hidden" asp-for="MaHoaDon" />

    <button type="submit" class="btn btn-primary">Thanh Toán</button>
</form>


