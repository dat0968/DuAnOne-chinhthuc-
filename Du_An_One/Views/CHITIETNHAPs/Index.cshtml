<div class="page-inner">



<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">PHIẾU NHẬP</h1>
</div>
<div class="row">

    <div class="col-md-9">

        <a class="btn btn-primary" href="CHITIETNHAPs/Create">Thêm phiếu nhập</a>
        <a href="CHITIETNHAPs/ExportExcelChiTietNhap" class="btn btn-label-success btn-round btn-sm me-2">
                <span class="btn-label">
                    <i class="fa fa-download"></i>
                </span>
                Xuất danh sách phiếu nhập
            </a>
        <div class="row">

            <div class="col-sm-12" style="margin:20px 0 0 0; ">
                <form asp-controller="CHITIETNHAPs" asp-action="Index">
                        <input type="input" id="searchInput" name="keywords" class="form-control mb-3" placeholder="Tìm kiếm">
                        <button style="margin-bottom: 20px"><a class="btn btn-primary">Tìm kiếm</a></button>
                        
                </form>
            </div>
        </div>

        <table class="table table-bordered table-hover" style="width:135%;">
            <thead>
                <tr style="font-size:.9em">
                    <th class="text-center" style="width:auto">Mã chi tiết nhập</th>
                    <th class="text-center" style="width:auto">Mã nhà cung cấp</th>

                    <th class="text-center" style="width:auto">Mã sản phẩm</th>
                    <th class="text-center" style="width:auto">Số lượng nhập</th>
                    <th class="text-center" style="width:auto">Đơn giá nhập</th>

                   
                    <th class="text-center" style="width:auto">Tổng tiền</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                    @foreach (var phieunhap in Model)
                        {
                            <tr style="font-size:.9em">

                            <td name="DisplayMaChiTietNhap">@phieunhap.MaChiTietNhap</td>
                            <td>@phieunhap.MaNhaCC</td>

                            <td>@phieunhap.MaSP</td>
                            <td>@phieunhap.SoLuongNhap</td>
                            <td>@phieunhap.DonGiaNhap</td>
                            <td>@(phieunhap.SoLuongNhap * phieunhap.DonGiaNhap)</td>
             

                                <!-- Sửa -->

                            <td><a type="button" class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@phieunhap.MaChiTietNhap">Sửa</a></td>
                            <td><a type="button" class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@phieunhap.MaChiTietNhap">Chi tiết</a></td>

                                <!-- Xóa -->
                                 <td>
                                <a type="button" class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@phieunhap.MaChiTietNhap">Xóa</a>
                                 </td>
        


                            </tr>
           
                        }
                    
            </tbody>
        </table>
</div>
<div >          
