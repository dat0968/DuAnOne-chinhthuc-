@model Du_An_One.Models.CHITIETNHAP

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}

<h1>XÓA PHIẾU NHẬP</h1>

<h3>Bạn có chắc chắn muốn xóa thông tin phiếu nhập này không?</h3>
<form asp-action="Delete">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="MaChiTietNhap" class="control-label">Mã chi tiết nhập</label>
        <input asp-for="MaChiTietNhap" readonly class="form-control" />
        <span asp-validation-for="MaChiTietNhap" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaNhaCC" class="control-label">Mã nhà cung cấp</label>
        <input asp-for="MaNhaCC" readonly class="form-control" />
        <span asp-validation-for="MaNhaCC" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaSP" class="control-label">Mã sản phẩm</label>
        <input asp-for="MaSP" readonly class="form-control" />
        <span asp-validation-for="MaSP" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SoLuongNhap" class="control-label">Số lượng nhập</label>
        <input asp-for="SoLuongNhap" readonly class="form-control" />
        <span asp-validation-for="SoLuongNhap" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DonGiaNhap" class="control-label">Đơn giá nhập</label>
        <input asp-for="DonGiaNhap" readonly class="form-control" />
        <span asp-validation-for="DonGiaNhap" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Tổng tiền</label>
        <input readonly class="form-control" value="@(Model.SoLuongNhap * Model.DonGiaNhap)" />
    
    </div>
    <div class="form-group">
        <input type="submit" value="Xóa" class="btn btn-primary" />
    </div>
</form>
<div class="form-group">
    <a asp-action="Index"> <button class="btn btn-primary">Quay lại</button></a>
</div>