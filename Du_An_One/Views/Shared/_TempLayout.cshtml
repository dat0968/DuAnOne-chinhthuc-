    <!-- Hộp thoại xác nhận đăng xuất -->
    <div id="confirmLogout" class="fixed inset-0 bg-gray-600 bg-opacity-50 flex items-center justify-center" style="display:none;"
         onclick="if(event.target == document.getElementById('confirmLogout')){document.getElementById('confirmLogout').style.display = 'none'}">
        <div class="bg-white p-6 rounded shadow-lg w-80">
            <h2 class="text-2xl font-bold mb-4 text-center">Xác nhận đăng xuất</h2>
            <div class="flex justify-between">
                <form asp-controller="Login" asp-action="LogOut" method="post" class="inline">
                    <button type="submit" class="btn btn-danger">Xác nhận</button>
                </form>
                <button class="btn btn-secondary" onclick="document.getElementById('confirmLogout').style.display = 'none'">Hủy</button>
            </div>
        </div>
    </div>
    <script></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
