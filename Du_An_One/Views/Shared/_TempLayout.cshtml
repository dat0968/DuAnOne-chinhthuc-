@using System.Security.Claims;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var userRole = User.FindFirst(ClaimTypes.Role)?.Value;
    var MaNguoiDung = User.FindFirst(ClaimTypes.Surname)?.Value;
    var VaiTro = User.FindFirst(ClaimTypes.Actor)?.Value;
}
<!DOCTYPE html>
<html lang="en" style="
    scroll-snap-type: y mandatory;">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WA_TryShoesWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
    <script src="https://unpkg.com/unlazy@0.11.3/dist/unlazy.with-hashing.iife.js"
            defer
            init></script>
</head>
<body>
    <header id="mainHeader" class="container sticky border-bottom fixed">
        <div class="row " style="align-items:center">
            <div class="col-md-3 text-center">
                <img src="https://banner2.cleanpng.com/lnd/20240725/aoo/ak6ya8an1.webp" alt="No Image🖼️" class="img-fluid rounded-circle" width="80" height="80">
            </div>
            <div class="col-md-6">
                <ul class="d-flex justify-content-center gap-40">
                    <li><a class="font-bold text-1xl" href="#">Index</a></li>
                    <li><a class="font-bold text-1xl" href="#">Products</a></li>
                </ul>
            </div>
            <div class="col-md-3">
                <ul class="d-flex justify-content-around ">
                    <li><a class="font-bold text-1xl" href="#">Bag</a></li>
                    <li id="tst-dropitems" class="dropdown">
                        <a class="font-bold text-1xl dropdown-toggle hidden-caret" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">Settings</a>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <li><a class="dropdown-item" asp-controller="KHACHHANGs" asp-action="InfoCustomer" asp-route-id="@MaNguoiDung">Account</a></li>
                            @if (VaiTro == "Quản lý"){
                                <li><a class="dropdown-item" asp-controller="DashboardAdmin" asp-action="Dashboard">Manager</a></li>
}
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <main class="h-100">


        <!-- Section for displaying products -->
        <div class="container mx-auto px-4 py-16">
            <div class="grid grid-cols-1 gap-8">
                @* md:grid-cols-3 *@
                @* Giao diện thông tin người dùng *@
                <div class="flex">
                    <div class="flex-1 p-6 bg-background">
                        @* Giao diện danh sách đơn hàng *@

                        @* Giao diện cho giỏ hàng *@
                        
                        @* Giao diện đơn hàng cho khách *@

                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer class="bg-black text-white py-8">
        <div class="container">
            <div class="row justify-content-between">
                <div class="col-md-4">
                    <img src="https://banner2.cleanpng.com/lnd/20240725/aoo/ak6ya8an1.webp"
                         alt="No Image🖼️"
                         style="border-radius: 50%; width: 100px; height: 100px" />
                </div>
                <div class="col">
                    <ul>
                        <li class="text-white">Info</li>
                        <li><a href="#">Find a store</a></li>
                        <li><a href="#">Gift</a></li>
                        <li><a href="#">Feedback</a></li>
                        <li><a href="#">Become a member</a></li>
                    </ul>
                </div>
                <div class="col-md-2">
                    <ul>
                        <li class="text-white">Shop</li>
                        <li><a href="#">TUFT</a></li>
                        <li><a href="#">Sirius</a></li>
                        <li><a href="#">Collections</a></li>
                        <li><a href="#">Contacts</a></li>
                    </ul>
                </div>
                <div class="col-md-2">
                    <ul>
                        <li class="text-white">About</li>
                        <li><a href="#">News</a></li>
                        <li><a href="#">Careers</a></li>
                        <li><a href="#"></a></li>
                        <li><a href="#"></a></li>
                    </ul>
                </div>
                <div class="col-md-2">
                    <ul style="display: flex; justify-content: space-around">
                        <li>
                            <a href="#"><i class="fi fi-brands-facebook"></i></a>
                        </li>
                        <li>
                            <a href="#"><i class="fi fi-brands-twitter-alt-circle"></i></a>
                        </li>
                        <li>
                            <a href="#"><i class="fi fi-brands-telegram"></i></a>
                        </li>
                        <li>
                            <a href="#"><i class="fi fi-brands-youtube"></i></a>
                        </li>
                    </ul>
                </div>
            </div>

            <div style="display: flex; justify-content: space-between">
                <div>
                    © 2019 NIKE <br />
                    All Rights Reserved
                </div>
                <div>Private & Cookie Policy</div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("head", required: false)
</body>
</html>
