@using System.Security.Claims;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var userRole = User.FindFirst(ClaimTypes.Role)?.Value;
    var MaNguoiDung = User.FindFirst(ClaimTypes.Surname)?.Value;
}
<!DOCTYPE html>
<html lang="en" style="
    scroll-snap-type: y mandatory;">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | TUFT</title>
    <!-- Fonts and icons -->
    <script src="~/js/plugin/webfont/webfont.min.js"></script>

    <!-- CSS Files -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/plugins.min.css" />
    <link rel="stylesheet" href="~/css/kaiadmin.min.css" />
    <link href="~/css//kaiadmin.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <link rel="icon"
          href="~/img/kaiadmin/favicon.ico"
          type="image/x-icon" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
    <script src="https://unpkg.com/unlazy@0.11.3/dist/unlazy.with-hashing.iife.js"
            defer
            init></script>
</head>
<body>
    <!-- Main Header -->
    <partial name="_HeaderLayout.cshtml" />
    <main style="min-height:100vh;max-height:100%">
        @if (ViewBag.ViewNow == "Index")
        {
            <div class="container-fluid bg-gradient-to-r from-black to-blue-600 text-white">
                <div class="row align-items-center justify-content-center gap-40">
                    <div class="col-md-5">
                        <h1 class="display-4">New Jordan 6 Rings</h1>
                        <p class="lead">The Jordan 6 Rings Men's Shoes celebrate Michael Jordan's championship career with classic design elements from each of his shoes.</p>
                        <button class="btn btn-dark">Shop Collection</button>
                    </div>
                    <div class="col-md-5">
                        <img src="~/img/examples/panel_Image.png" alt="New Jordan 6 Rings" class="img-fluid">
                    </div>
                </div>
            </div>
            
        }

        <!-- Section for displaying products -->
        <div class="container mx-auto px-4 py-16 overflow-auto">
            <div class="grid gap-8">
                @* md:grid-cols-3 *@
                @* Giao diện thông tin người dùng *@
                @* Giao diện danh sách đơn hàng *@

                @* Giao diện cho giỏ hàng *@
                        
                @* Giao diện đơn hàng cho khách *@

                @RenderBody()
            </div>
        </div>
    </main>
    <partial name="_FooterLayout.cshtml" />

    <script></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!--   Core JS Files   -->
    <script src="~/js/core/jquery-3.7.1.min.js"></script>
    <script src="~/js/core/popper.min.js"></script>
    <script src="~/js/core/bootstrap.min.js"></script>

    <!-- jQuery Scrollbar -->
    <script src="~/js/plugin/jquery-scrollbar/jquery.scrollbar.min.js"></script>

    <!-- Chart JS -->
    <script src="~/js/plugin/chart.js/chart.min.js"></script>

    <!-- jQuery Sparkline -->
    <script src="~/js/plugin/jquery.sparkline/jquery.sparkline.min.js"></script>


    <!-- Bootstrap Notify -->
    <script src="~/js/plugin/bootstrap-notify/bootstrap-notify.min.js"></script>


    <!-- Sweet Alert -->
    <script src="~/js/plugin/sweetalert/sweetalert.min.js"></script>

    <!-- Kaiadmin JS -->
    <script src="~/js/kaiadmin.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("head", required: false)
</body>
</html>
