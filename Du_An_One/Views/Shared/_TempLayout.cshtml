@using System.Security.Claims;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var userRole = User.FindFirst(ClaimTypes.Role)?.Value;
    var MaNguoiDung = User.FindFirst(ClaimTypes.Surname)?.Value;
}
<!DOCTYPE html>
<html lang="en" style="
    scroll-snap-type: y mandatory;">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WA_TryShoesWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
    <script src="https://unpkg.com/unlazy@0.11.3/dist/unlazy.with-hashing.iife.js"
            defer
            init></script>
</head>
<body>
    <!-- Main Header -->
    <header id="mainHeader" class="container sticky border-bottom fixed">
        <div class="row" style="align-items:center">
            <div class="col-md-3 text-center">
                <img src="https://banner2.cleanpng.com/lnd/20240725/aoo/ak6ya8an1.webp" alt="No Image🖼️" class="img-fluid rounded-circle" width="80" height="80">
            </div>
            <div class="col-md-6">
                <ul class="d-flex justify-content-center gap-40">
                    <li><a class="font-bold text-1xl" href="#">Index</a></li>
                    <li><a class="font-bold text-1xl" href="#">Products</a></li>
                </ul>
            </div>
            <div class="col-md-3">
                <ul class="d-flex justify-content-around">
                    <li><a class="font-bold text-1xl" href="#">Bag</a></li>
                    <li id="tst-dropitems" class="dropdown">
                        <a class="font-bold text-1xl dropdown-toggle hidden-caret" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">Settings</a>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            @if (String.IsNullOrEmpty(MaNguoiDung))
                            {
                                <li class="px-4"><a asp-controller="Login" asp-action="Index" style="cursor: pointer;">Đăng nhập</a></li>
                            }
                            else
                            {
                                @if (userRole == "Quản lý")
                                {
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="TongQuan">Quản lý</a></li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" asp-controller="KHACHHANGs" asp-action="InfoCustomer" asp-route-id="@MaNguoiDung">Tài khoản</a></li>
                                }
                                <li>
                                    <button type="submit" class="dropdown-item" onclick="document.getElementById('confirmLogout').style.display = ''">Đăng xuất</button>
                                </li>
                            }
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </header>


    <main class="h-100">
        @if (ViewBag.ViewNow == "Index")
        {
            <div class="container-fluid bg-gradient-to-r from-black to-blue-600 text-white">
                <div class="row align-items-center justify-content-center gap-40">
                    <div class="col-md-5">
                        <h1 class="display-4">New Jordan 6 Rings</h1>
                        <p class="lead">The Jordan 6 Rings Men's Shoes celebrate Michael Jordan's championship career with classic design elements from each of his shoes.</p>
                        <button class="btn btn-dark">Shop Collection</button>
                    </div>
                    <div class="col-md-5">
                        <img src="https://placehold.co/600x400" alt="New Jordan 6 Rings" class="img-fluid">
                    </div>
                </div>
            </div>
            
        }

        <!-- Section for displaying products -->
        <div class="container mx-auto px-4 py-16">
            <div class="grid grid-cols-1 gap-8">
                @* md:grid-cols-3 *@
                @* Giao diện thông tin người dùng *@
                @* Giao diện danh sách đơn hàng *@

                @* Giao diện cho giỏ hàng *@
                        
                @* Giao diện đơn hàng cho khách *@

                @RenderBody()
            </div>
        </div>
    </main>
