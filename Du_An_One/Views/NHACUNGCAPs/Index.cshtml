<div class="page-inner">



<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Nhà cung cấp</h1>
</div>
<div class="row">

    <div class="col-md-9">

        <a class="btn btn-primary" href="NHACUNGCAPs/Create">Thêm nhà cung cấp</a>
            <a href="NHACUNGCAPs/ExportExcelNhaCungCap" class="btn btn-label-success btn-round btn-sm me-2">
                <span class="btn-label">
                    <i class="fa fa-download"></i>
                </span>
                Xuất danh sách nhà cung cấp
            </a>
        <div class="row">

                <div class="col-sm-12" style="margin:20px 0 0 0; ">
                    <form asp-controller="NHACUNGCAPs" asp-action="Index">
                        <input type="input" id="searchInput" name="keywords" class="form-control mb-3" placeholder="Tìm kiếm">
                        <button style="margin-bottom: 20px"><a class="btn btn-primary">Tìm kiếm</a></button>

                    </form>
                </div>
        </div>

        <table class="table table-bordered table-hover" style="width:135%;">
            <thead>
                <tr style="font-size:.9em">
                    <th class="text-center" style="width:auto">Mã nhà cung cấp</th>
                    <th class="text-center" style="width:auto">Tên nhà cung cấp</th>

                    <th class="text-center" style="width:auto">Địa chỉ</th>
                    <th class="text-center" style="width:auto">Email</th>
                    <th class="text-center" style="width:auto">SDT</th>

                    <th class="text-center" style="width:auto">Thời gian cung cấp</th>
                    <th class="text-center" style="width:auto">Tình trạng</th>
                    <th></th>
                        <th></th>
                        <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var nhacc in Model)
                {
                    <tr style="font-size:.9em">
                        <td name="DisplayMaNhaCungCap">@nhacc.MaNhaCC</td>
                        <td>@nhacc.TenNhaCC</td>

                        <td>@nhacc.DiaChi</td>
                        <td>@nhacc.Email</td>
                        <td>@nhacc.SDT</td>
                        <td>@nhacc.ThoiGianCungCap.ToShortDateString()</td>
                        <td>@nhacc.TinhTrang</td>
                          
                        <!-- Sửa -->

                            <td><a type="button" class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@nhacc.MaNhaCC"><i class="bi bi-pencil">Sửa</i></a></td>
                            <td><a type="button" class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@nhacc.MaNhaCC">Chi tiết</a></td>
                        <!-- Xóa -->
                         <td>
                            <a type="button" class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@nhacc.MaNhaCC">Xóa</a>
                         </td>
        


                    </tr>
                }
            </tbody>
        </table>

    </div>

        <div>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
