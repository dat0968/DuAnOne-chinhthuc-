<div class="page-inner">



<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">KHUYẾN MÃI</h1>
</div>
<div class="row">

    <div class="col-md-9">

        <a class="btn btn-primary" href="KHUYENMAIS/Create">Thêm khuyến mãi</a>
        <div class="row">

            <div class="col-sm-12" style="margin:20px 0 0 0; ">
                    <form asp-controller="KHUYENMAIs" asp-action="Index">
                        <input type="input" id="searchInput" name="keywords" class="form-control mb-3" placeholder="Tìm kiếm">
                        <button style="margin-bottom: 20px"><a class="btn btn-primary">Tìm kiếm</a></button>

                    </form>
            </div>
        </div>

        <table class="table table-bordered table-hover" style="width:135%;">
            <thead>
                <tr style="font-size:.9em">
                    <th class="text-center" style="width:auto">Mã KM</th>
                    <th class="text-center" style="width:auto">Phần trăm khuyến mãi</th>

                    <th class="text-center" style="width:auto">Thời gian bắt đầu</th>
                    <th class="text-center" style="width:auto">Thời gian kết thúc</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var khuyenmai in Model)
                {
                    <tr style="font-size:.9em">
                        <td name="DisplayMaKhuyenMai">@khuyenmai.MaKhuyenMai</td>
                        <td>@khuyenmai.PhanTramKhuyenMai</td>
                            <td>@khuyenmai.ThoiGianStart.ToShortDateString()</td>
                            <td>@khuyenmai.ThoiGianEnd.ToShortDateString()</td>

                        <!-- Sửa -->

                            <td><a type="button" class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@khuyenmai.MaKhuyenMai">Sửa</a></td>
                        <td><a type="button" class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@khuyenmai.MaKhuyenMai">Chi tiết</a></td>
                        <!-- Xóa -->
                         <td>
                            <a type="button" class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@khuyenmai.MaKhuyenMai">Xóa</a>
                         </td>
        


                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>
<div>
   @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
