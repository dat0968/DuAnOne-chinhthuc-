@model Du_An_One.Models.KHUYENMAI

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}

<h1>CHI TIẾT THÔNG TIN KHUYẾN MÃI</h1>

<div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="MaKhuyenMai" class="control-label">Mã khuyến mãi</label>
        <input asp-for="MaKhuyenMai" readonly class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhanTramKhuyenMai" class="control-label"> Phần trăm</label>
        <input asp-for="PhanTramKhuyenMai" readonly class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ThoiGianStart" class="control-label">Thời gian bắt đầu</label>
        <input asp-for="ThoiGianStart" readonly type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ThoiGianEnd" class="control-label">Thời gian kết thúc</label>
        <input asp-for="ThoiGianEnd" readonly type="date" class="form-control" />
    </div>
    <div class="form-group">
        <a asp-action="Index"> <button class="btn btn-primary">Quay lại</button></a>
    </div>
</div>

