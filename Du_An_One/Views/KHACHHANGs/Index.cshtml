<div class="page-inner">



<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">KHÁCH HÀNG</h1>
</div>
<div class="row">

    <div class="col-md-9">

        <a class="btn btn-primary" href="KHACHHANGS/Create">Thêm khách hàng</a>
            <a href="KHACHHANGs/ExportExcelKhachHang" class="btn btn-label-success btn-round btn-sm me-2">
                <span class="btn-label">
                    <i class="fa fa-download"></i>
                </span>
                Xuất danh sách khách hàng
            </a>
        <div class="row">

            <div class="col-sm-12" style="margin:20px 0 0 0; ">
                <form asp-controller="KHACHHANGs" asp-action="Index">
                        <input type="input" id="searchInput" name="keywords" class="form-control mb-3" placeholder="Tìm kiếm">
                        <button style="margin-bottom: 20px"><a class="btn btn-primary">Tìm kiếm</a></button>
                        
                </form>
                    
                   @*  <button type="button" class="btn btn-primary editButton" asp-action="Edit"><i class="bi bi-pencil"></i></button> *@
            </div>
        </div>

        <table class="table table-bordered table-hover" style="width:135%;">
  
        </div>
            <thead>
                <tr style="font-size:.9em">
                    <th class="text-center" style="width:auto">Mã KH</th>
                    <th class="text-center" style="width:auto">Tên khách hàng</th>
                    <th class="text-center" style="width:auto">Địa chỉ</th>
                    <th class="text-center" style="width:auto">CCCD</th>
                    <th class="text-center" style="width:auto">Số điện thoại</th>
                    <th class="text-center" style="width:auto">Email</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var khachhang in Model)
                {
                    <tr style="font-size:.9em">
                        <td name="DisplayMaKhachHang">@khachhang.MaKH</td>
                        <td>@khachhang.HoTen</td>
                        <td>@khachhang.DiaChi</td>
                        <td>@khachhang.CCCD</td>
                        <td>@khachhang.SDT</td>
                        <td>@khachhang.Email</td>


                        <!-- Sửa -->

                    <td><a type="button" class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@khachhang.MaKH">Sửa</a></td>
                    <td><a type="button" class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@khachhang.MaKH">Chi tiết</a></td>

                        <!-- Xóa -->
                         <td>
                                <a type="button" class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@khachhang.MaKH">Xóa</a>
                         </td>



                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
   {
       LiElementClasses = new List<string> { "page-item" },
       PageClasses = new List<string> { "page-link" }
   })
    </div>
</div>
